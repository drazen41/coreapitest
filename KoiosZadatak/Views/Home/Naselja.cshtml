        //        alert(data);

        //        //alert("Update uspio.");
        //    },
        //    error: function () {
        //        //alert("Ajax call failed");
        //    }
        //});
    }
    function PutDrzava(naselje) {
        $.ajax({
            url: "/api/naselje/" + naselje.Id,
            type: 'PUT',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            data: drzava,
            success: function (data) {
                alert(data);

                //alert("Update uspio.");
            },
            error: function () {
                //alert("Ajax call failed");
            }
        });
    }
    function GetNaselje(val) {
        $.ajax({
            url: "/api/naselje/" + val,
            method: "GET",
            data: { id: val },
            success: function (data) {
                var id = data.id;
                var naziv = data.naziv;
                var pbr = data.postanskiBroj;
                $("#hidNaseljeId").val(id);
                $("#txtNaziv").val(naziv);
                $("#txtPostBroj").val(pbr);
                $("#ddlDrzave").val(data.drzavaId);
                $("#ddlDrzave").attr('selected', 'selected');
            },
            error: function () {
                alert("Ajax call failed");
            }
        });
    }
    function DeleteNaselje(val) {
        $.ajax({
            url: "/api/naselje/" + val,
            method: "DELETE",
            data: { id: val },
            success: function (data) {
                //alert(data.id);
                $("#" + data.id).remove();
                
            },
            error: function () {
                alert("Ajax call failed");
            }
        });
    }
</script>