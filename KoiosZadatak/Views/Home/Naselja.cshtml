            //data: {naziv: naselje.Naziv, drzavaId: naselje.DrzavaId, pbr: naselje.PostanskiBroj },
            data: naselje1,
            success: function (data) {
                alert(data);
            },
            error: function () {
                alert("Ajax call failed");
            }
        });

        //$.ajax({
